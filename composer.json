{
    "name": "imedge/icingaweb2-module-imedge",
    "description": "IMEdge Icinga Web module",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Thomas Gelf",
            "email": "thomas@gelf.net"
        }
    ],
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "7.4.20"
        }
    },
    "scripts": {
        "post-update-cmd": [
            "bin/refresh-public.sh"
        ]
    },
    "require": {
        "php": ">=7.4",
        "ext-dom": "*",
        "ext-gd": "*",
        "ext-json": "*",
        "ext-pdo": "*",
        "ext-zlib": "*",
        "imedge/rrdgraph": ">=0.3",
        "imedge/rrd-graph-info": ">=0.3.3",
        "imedge/svg": "@dev",
        "imedge/web-data": "@dev",
        "imedge/web-device": "@dev",
        "imedge/web-flags": "@dev",
        "imedge/web-grapher": "@dev",
        "imedge/web-rpc": "@dev",
        "imedge/web-select2": "@dev"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.4",
        "phpunit/phpunit": "^10 || ^9.5",
        "squizlabs/php_codesniffer": "^3.6",
        "symplify/easy-coding-standard": "^12"
    }
}
